{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@styles": ["./src/styles/index.css"],
      "@components": ["./src/components/index.ts"],
      "@hooks": ["./src/hooks/index.ts"],
      "@lib": ["./src/lib/index.ts"],
      "@types": ["./src/types/index.ts"],
      "@stylex/color.stylex.ts": ["./src/stylex/consts/color.stylex.ts"],
      "@stylex/px.stylex.ts": ["./src/stylex/consts/px.stylex.ts"],
      "@stylex/font.stylex.ts": ["./src/stylex/consts/font.stylex.ts"],
      "@stylex/animation.stylex.ts": [
        "./src/stylex/consts/animation.stylex.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "next.config.js"
  ],
  "exclude": ["node_modules"]
}
